extends layout

block content
    div.row
        div.col-md-12
            h1= title
            
    div.tabs
        ul
            li
                a(href="#home") Portfolio
            li
                a(href="#contact") Contact
        div#home
            div.row
                div.col-xs-12
                    h2 Images
            div.row
                -for(var i = 0; i < mediaItems.length; i+=3)
                    - for(var j = 0; j < 3; j++)
                        if(i + j < mediaItems.length)

                            if(mediaItems[i + j].mediaType == 'image')
                                div.col-sm-4.col-xs-12
                                    figure
                                        a(class='' href='#{mediaItems[i + j].filePath}' data-lightbox='image-set' data-title='#{mediaItems[i + j].fileTitle}')
                                        img(src='#{mediaItems[i + j].filePath}' alt='Alt Text' class='thumbnail')
                                        figcaption #{mediaItems[i + j].fileTitle}
                                            
            div.row
                div.col-xs-12
                    h2 SWFs  
            div.row
                -for(var i = 0; i < mediaItems.length; i+=3)
                    - for(var j = 0; j < 3; j++)
                        if(i + j < mediaItems.length)

                            if(mediaItems[i + j].mediaType == 'swf')
                                div.col-sm-4.col-xs-12
                                    figure.swfContainer
                                        object(classid='clsid:d27cdb6e-ae6d-11cf-96b8-444553540000' codebase="http://fpdownload.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=8,0,0,0" width="100%" height="100%")
                                            param(name='movie' value='#{mediaItems[i + j].filePath}')
                                            param(name='quality' value='high')
                                            param(name='scale' value='default')
                                            embed(src='#{mediaItems[i + j].filePath}' quality="high" type='#{mediaItems[i + j].file.mimetype}' width='100%' height='100%' scale="default" pluginspage="http://www.macromedia.com/go/getflashplayer")
                                        figcaption #{mediaItems[i + j].fileTitle}
            div.row
                div.col-xs-12
                    h2 Videos  
            div.row
                -for(var i = 0; i < mediaItems.length; i+=3)
                    - for(var j = 0; j < 3; j++)
                        if(i + j < mediaItems.length)

                            if(mediaItems[i + j].mediaType == 'video')
                                div.col-sm-4.col-xs-12
                                    figure
                                        video(controls).swfContainer
                                            source(src='#{mediaItems[i + j].filePath}' type='#{mediaItems[i + j].file.mimetype}')
                                        figcaption #{mediaItems[i + j].fileTitle}
        div#contact
            p #{contactPage.contactDetails.name}
            p
                a(href="mailto:#{contactPage.contactDetails.email}") #{contactPage.contactDetails.email}