extends layout

block content
    div.row
        div.col-md-12
            h1= title
            h2 Welcome to Portfolio Builder
    div.row
        div.col-md-6
            h3 Login
            if warning
                p(class="warning") #{warning}
                
            form(id="adminLogin" method="post" action="/login")
                input(type="text" name="username")
                input(type="password" name="password")
                input(type="submit" name="Login")