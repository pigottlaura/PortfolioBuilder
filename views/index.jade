extends layout

block content
    script(src="/javascripts/loginScript.js")

    div.row
        div.col-md-12
            h1= title
    div.row
        div.col-md-10.col-sm-12
            div.tabs(id="createOrLoginAccount")
                ul
                    li
                        a(href="#createAccountTab") Create New
                    li
                        a(href="#loginTab") Login
                div#createAccountTab.relative
                    div.row
                        div.col-sm-8.col-xs-12
                            h3 Create a new Portfolio
                            form(id="createAccount" method="post" action="/createAccount").full-contents
                                div.row
                                    div.col-md-6.col-sm-12
                                        label(for="username") Username:
                                    div.col-md-6.col-sm-12
                                        input(type="text" name="username")
                                        span(id="usernameStatusIcon" aria-hidden="true")
                                div.row
                                    div.col-md-6.col-sm-12
                                        label(for="password") Password:
                                    div.col-md-6.col-sm-12
                                        input(type="password" name="password")
                                div.row
                                    div.col-md-6.col-sm-12
                                        label(for="confirmPassword") Confirm Password:
                                    div.col-md-6.col-sm-12
                                        input(type="password" name="confirmPassword")
                                div.row
                                    div.col-md-6.col-sm-12
                                        label(for="firstName") First Name:
                                    div.col-md-6.col-sm-12
                                        input(type="text" name="firstName")
                                div.row
                                    div.col-md-6.col-sm-12
                                        label(for="lastName") Last Name:
                                    div.col-md-6.col-sm-12
                                        input(type="text" name="lastName")
                                div.row
                                    div.col-xs-12
                                        label(for="portfolioURL") Portfolio URL: 
                                            span #{websiteURL}
                                    div.col-xs-12
                                        input(type="text" name="portfolioURL")
                                        span(id="portfolioURLStatusIcon" aria-hidden="true")
                                div.row
                                    div.col-md-offset-6.col-md-6.col-xs-12
                                        input(type="submit" value="Create Portfolio" class="btn btn-success submitButton")
                        div.col-sm-4.col-xs-12.googleButton
                                div.row.mobileHide
                                    div.col-sm-12.col-xs-offset-1.col-xs-10.center or sign up with your Google Account
                                div.row
                                    div.col-sm-12.col-xs-offset-1.col-xs-10
                                        a(href="/admin/authentication/google")
                                            button(type="button" class="btn btn-default btn-primary") Sign Up with Google
                div#loginTab.relative
                    div.row
                        div.col-sm-8.col-xs-12
                            h3 Login to your portfolio
                            if warning
                                p(class="warning") #{warning}
                                
                            form(id="loginAccount" method="post" action="/login").full-contents
                                div.row
                                    div.col-md-6.col-sm-12
                                        label(for="loginUsername") Username:
                                    div.col-md-6.col-sm-12
                                        input(type="text" name="loginUsername")
                                div.row
                                    div.col-md-6.col-sm-12
                                        label(for="loginPassword") Password:
                                    div.col-md-6.col-sm-12
                                        input(type="password" name="loginPassword")
                                div.row
                                    div.col-md-offset-6.col-md-6.col-xs-12
                                        input(type="submit" value="Login" class="btn btn-success submitButton")
                        div.col-sm-4.col-xs-12.googleButton
                            div.row.mobileHide
                                div.col-sm-12.col-xs-offset-1.col-xs-10.center or sign in with your Google Account
                            div.row
                                div.col-sm-12.col-xs-offset-1.col-xs-10
                                    a(href="/admin/authentication/google")
                                        button(type="button" class="btn btn-default btn-primary") Sign In with Google